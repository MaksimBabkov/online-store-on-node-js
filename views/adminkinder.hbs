<body>

<!--MENU-->

{{> munu}}

<!--MENU--> 
   
    <div class="container">
<h4 class="text-secondary">Детские товары</h4>
   </div>
   
   <div class="flex">
{{#each kinder}}
<div class="block">
<div class="column">
<h3>{{this.name}}</h3>
<p>Цена {{this.age}} $</p>
<p>Старая цена {{this.oldcena}} $</p>
<p>{{this.text}}</p>

<img src="{{this.img}}" width="100%" height="230px">
<!--<img src="{{this.img1}}" width="100%" height="230px" alt="">  -->

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#{{this.name}}">
  Галерея
</button>

  <!--<a href="/edit/{{this.id}}">Редактировать</a><hr>-->


     <form action="deleteadminkinder/{{this.id}}" method="POST" style="display:inline;">
        <input type="submit" value="Удалить" />
     </form>
</div>
</div>

<!-- Modal -->
<div class="modal fade" id="{{this.name}}" tabindex="-1" aria-labelledby="{{this.name}}" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{this.name}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

<img src="{{this.img1}}" width="100%" height="100%" alt="">
<img src="{{this.img2}}" width="100%" height="100%" alt="">
<img src="{{this.img3}}" width="100%" height="100%" alt="">
<img src="{{this.img4}}" width="100%" height="100%" alt="">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
        <!--<button type="button" class="btn btn-primary">Save changes</button>-->
      </div>
    </div>
  </div>
</div>







{{/each}}
